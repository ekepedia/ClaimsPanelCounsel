<!DOCTYPE html>
<html ng-app = "claimsPanel">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <title>New Vendor</title>
  
  <!-- bootstrap -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap/bootstrap.min.css" />
  
  <!-- libraries -->
  <link rel="stylesheet" type="text/css" href="css/libs/font-awesome.css" />
  <link rel="stylesheet" type="text/css" href="css/libs/nanoscroller.css" />

  <!-- global styles -->
  <link rel="stylesheet" type="text/css" href="css/compiled/theme_styles.css" />

  <!-- this page specific styles -->
  <link rel="stylesheet" href="css/libs/datepicker.css" type="text/css" />
  <link rel="stylesheet" href="css/libs/daterangepicker.css" type="text/css" />
  <link rel="stylesheet" href="css/libs/bootstrap-timepicker.css" type="text/css" />
  <link rel="stylesheet" href="css/libs/select2.css" type="text/css" />
  
  <!-- Favicon -->
  <link type="image/x-icon" href="favicon.png" rel="shortcut icon"/>

  <!-- google font libraries -->
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300|Titillium+Web:200,300,400' rel='stylesheet' type='text/css'>

  <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
  <![endif]-->
</head>
<body class="theme-whbl" ng-controller="newVendorController">
  <div id="theme-wrapper">
    <% include partials/header %>
    <div id="page-wrapper" class="container">
      <div class="row">
        <% include partials/navigation %>
        </div>
        <div id="content-wrapper">
          <div class="row">
            <div class="col-lg-12">
              
              <div class="row">
                <div class="col-lg-12">
                  <ol class="breadcrumb">
                    <li><a href="home">Home</a></li>
                    <li><a href="vendor">Vendors</a></li>
                    <li class="active"><span>Vendor Info</span></li>
                  </ol>
                  
                  <h1>Edit Vendor Info</h1>
                </div>
              </div>
              
              <form role="form" action="/api/vendor" method="post">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="main-box">
                      <header class="main-box-header clearfix">
                        <h2>Basic Information</h2>
                      </header>
                      
                      <div class="main-box-body clearfix">
                        <div class="form-group">
                          <label for="name" >Name</label>
                          <input name="name" class="form-control" id="name" placeholder="Enter name">
                        </div>
                        <div class="form-group">
                          <label for="firnName">Firm Name</label>
                          <input class="form-control" id="firmName" placeholder="Enter firm name" name="firmName">
                        </div>
                        <div class="form-group">
                          <label for="notes">Notes</label>
                          <textarea class="form-control" id="notes" rows="3" name="notes"></textarea>
                        </div>
                        <div class="form-group">
                          <label>Vendor Type</label>
                          <select class="form-control" >
                            <option ng-repeat="vendor in enums.vendors">
                              {{vendor}}
                            </option>
                          </select>
                        </div>
                        <div class="form-group form-group-select2">
                          <label>Types of Defense</label>
                          <select style="width: 100%"id="defense" name="defenses"multiple>
                          </select>
                        </div>
                        <div class="form-group form-group-select2">
                          <label>Status</label>
                          <select style="width:100%" id="status" name="status">
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="main-box">
                      <header class="main-box-header clearfix">
                        <h2>Contact Information</h2>
                      </header>
                      
                      <div class="main-box-body clearfix">
                        <div class="row">
                        <div class="form-group col-lg-3">
                          <div class="checkbox-nice checkbox-inline">
                            <input type="checkbox" id="keyContact" />
                            <label for="keyContact">
                              Key Contact
                            </label>
                          </div>
                        </div>
                        <div class="form-group col-lg-9">
                          <label for="phone">Phone + Ext</label>
                          <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-mobile-phone"></i></span>
                            <input name="phone"type="text" class="form-control" id="phone">
                          </div>
                        </div>
                        </div>
                        <div class="form-group">
                          <label for="email">Email Address</label>
                          <input name="email"type="email" class="form-control" id="email" placeholder="Enter email adress">
                        </div>
                        <div class="form-group">
                          <label for="address">Address</label>
                          <input  name="address"class="form-control" id="address" placeholder="Enter address">
                        </div>
                        <div class="form-group">
                          <label for="city">City</label>
                          <input name="city" class="form-control" id="city" placeholder="Enter the city">
                        </div>
                        <div class="form-group form-group-select2">
                            <label>State of Residence</label>
                            <select name="state" style="width:100%" id="state" >
                            </select>
                        </div>
                        <div class="form-group form-group-select2">
                            <label>State Represented</label>
                            <select name="stateRepresented"style="width:100%" id="stateRepresented" >
                            </select>
                        </div>

                        <div class="form-group form-group-select2">
                          <label>Department</label>
                          <select name="department" style="width:100%" id="department" >
                          </select>
                        </div>
                        
                      </div>
                    </div>
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-lg-12">
                    <div class="main-box">
                      <header class="main-box-header clearfix">
                        <h2>Rates</h2>
                        <button id="addButton" type="button" class="btn btn-success pull-right col-lg-1 col-md-offset-1">Add</button>
                        <button id="removeButton"type="button" class="btn btn-warning pull-right col-lg-1  col-md-offset-1">Remove</button>
                      </header>
                      
                      <div class="main-box-body clearfix">
                        <div class="row" ng-repeat="rate in rates">

                          <div class="form-group col-md-1">
                              <label for="rate">Rate</label>
                              <input name="rate" class="form-control" id="rate{{rate}}" placeholder="Rate">
                          </div>
                          <div class="form-group form-group-select2 col-md-2">
                            <label>Types of Defense</label>
                            <select style="width: 100%"id="rateDefense{{rate}}" name="rateTypeOfDefense">
                            </select>
                          </div>                       
                          <div class="form-group col-md-3">
                            <label>Type of Rate</label>
                            <select style="width: 100%"id="rateType{{rate}}" name="rateType">
                            </select>
                          </div>
                          <div class="form-group col-md-3">
                            <label for="date{{rate}}">Date</label>
                            <div class="input-group" data-date-format="dd-mm-yyyy">
                              <input type="text" class="form-control" id="date{{rate}}" name="rateApprovalDate" readonly>
                              <span class="input-group-addon"><i class="fa fa-th"></i></span>
                            </div>
                            <span class="help-block">Select Date</span>
                          </div>
                          <div class="form-group col-md-3">
                            <fieldset disabled>
                              <label for="name">Changed By</label>
                              <input class="form-control" id="name" value="<%= user.username %>" name="rateChangedBy">
                            </fieldset>
                          </div>
                          
                        </div>
                      </div>
                    </div>
                  </div> 
                </div>
                <div class="row">
                  <button id="submitButton" type="submit" class="btn btn-success pull-right col-lg-1">Submit</button>
                </div>
              </form>
              
            </div>
          </div>
          
          <footer id="footer-bar" class="row">
            <p id="footer-copyright" class="col-xs-12">
              Powered by Cube Theme.
            </p>
          </footer>
        </div>
      </div>
    </div>
  </div>

  <!-- global scripts -->
  <script src="angularjs/js/angular.min.js"></script>
  
  <script src="js/jquery.js"></script>
  <script src="js/bootstrap.js"></script>
  <script src="js/jquery.nanoscroller.min.js"></script>
  
  <script src="js/demo.js"></script> <!-- only for demo -->
  
  <!-- this page specific scripts -->
  <script src="js/jquery.maskedinput.min.js"></script>
  <script src="js/bootstrap-datepicker.js"></script>
  <script src="js/moment.min.js"></script>
  <script src="js/daterangepicker.js"></script>
  <script src="js/bootstrap-timepicker.min.js"></script>
  <script src="js/select2.min.js"></script>
  <script src="js/hogan.js"></script>
  <script src="js/typeahead.min.js"></script>
  <script src="js/jquery.pwstrength.js"></script>
  <script src="js/main.js"></script>
  
  <!-- theme scripts -->
  <script src="js/scripts.js"></script>
  <script src="js/pace.min.js"></script>
  
  <!-- this page specific inline scripts -->
  <script>
  $(function($) {
  
    $("#phone").mask("(999) 999-9999? x9999");
  
  });
  </script>
  
</body>
</html>